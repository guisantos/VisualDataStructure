<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">Blazor Data Structures</a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="linkedlist">
                <span class="oi oi-link-intact" aria-hidden="true"></span> Linked List
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="stack">
                <span class="oi oi-collapse-up" aria-hidden="true"></span> Stack
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="queue">
                <span class="oi oi-collapse-down" aria-hidden="true"></span> Queue
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="binarytree">
                <span class="oi oi-fork" aria-hidden="true"></span> Binary Tree
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="hashtable">
                <span class="oi oi-list" aria-hidden="true"></span> Hash Table
            </NavLink>
        </li>
    </ul>
</div>

@code {
    private bool collapseNavMenu = true;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
