<div class="card" style="width: 200px; background: @Color;">
    <div class="card-body">
        <p class="card-text" style="font-size: 35px;
        color: cornflowerblue; font-weight: 600; text-align:center">@Value</p>
    </div>
</div>

@code {
    [Parameter]
    public int Value { get; set; }

    [Parameter]
    public string Color { get; set; } = "aliceblue";
}
